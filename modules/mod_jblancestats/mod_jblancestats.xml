					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="total_users" type="radio" default="1" label="MOD_JBLANCE_LABEL_TOTAL_USERS" description="MOD_JBLANCE_DESC_TOTAL_USERS">
